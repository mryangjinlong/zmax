                </li>
                <li>
                <h2>¥75<em>起</em></h2>
                <del>¥100</del>
                </li>
                <li>
                <a href="#">选座购票</a>
                    </li>
                    <img src="img/inshell/border.png" alt="">
                    </ul>
                    </li>

                this.planBt.append(html.join(""));
            }


        };

        planPage.init();
