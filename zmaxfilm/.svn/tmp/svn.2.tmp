    // 成功回调页页面
    $(document).on("pageInit", "#page-result", function () {
        //speedNum 速度
        var _showImg = function (speedNum) {
            clearInterval(timer);
            var timer;
            var speed = speedNum;
            timer = setInterval(function () {
                var _this_top = parseFloat($('.pAdminit').css('top'));
                _this_top += speed;

                if (_this_top >= 197) {
                    clearInterval(timer);
                    setTimeout(function () {
                        $('.pAdminit').fadeOut("slow", function () {
                            $('.pAdminit').css('top', '-3.45rem');
                            clearTimeout(_timer);
                            var _timer;
                            _timer = setTimeout(function () {
                                $('.pAdminit').show();
                                _showImg(10);
                            }, 1000)
                        })
                    }, 500)
                } else {
                    $('.pAdminit').css('top', (_this_top / 100) + 'rem');
                }
            }, 50)
        }
        _showImg(10)
        var _timeBack = 10;
        var _tiemr;
        clearInterval(_tiemr);
        _tiemr = setInterval(function () {
            _timeBack--;
            if (_timeBack == 0) {
